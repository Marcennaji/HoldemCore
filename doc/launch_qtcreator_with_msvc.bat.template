REM TODO: Adjust this path for your Qt installation
set QT_ROOT=C:\Qt\6.9.2
set CMAKE_PREFIX_PATH=%QT_ROOT%\msvc2022_64

echo MSVC environment initialized âœ“
echo Qt path: %CMAKE_PREFIX_PATH%
echo.

REM TODO: Adjust this path for your Qt Creator installation
